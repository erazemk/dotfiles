// Template devcontainer configuration
{
    "build": {
        "dockerfile": "Containerfile"
    },
    "remoteUser": "dev",
    "runArgs": [
        "--hostname",
        "${localWorkspaceFolderBasename}",
        "--memory=4g",
        "--memory-swap=8g"
    ],
    "mounts": [
        "source=go-mod-cache,target=/home/dev/.local/share/go/pkg/mod,type=volume",
        "source=go-build-cache,target=/home/dev/.cache/go-build,type=volume",
        "source=sidekick-cache,target=/home/dev/.cache/sidekick,type=volume",
        "source=aws-credentials,target=/home/dev/.aws,type=volume"
    ],
    "postCreateCommand": "sudo chown -R dev:dev /home/dev"
}
